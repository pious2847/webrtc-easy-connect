{
  "name": "webrtc-easy",
  "version": "0.1.0",
  "description": "Easy to use WebRTC library for multiple frontend frameworks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "browser": "dist/webrtc-easy.min.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourusername/webrtc-easy.git"
  },
  "homepage": "https://github.com/yourusername/webrtc-easy#readme",
  "bugs": {
    "url": "https://github.com/yourusername/webrtc-easy/issues"
  },
  "scripts": {
    "build": "node build.js",
    "build:ts": "tsc && npm run copy-worklets",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "copy-worklets": "mkdir -p dist/worklets && cp src/core/media/worklets/*.js dist/worklets/",
    "start:signaling": "cd examples/signaling-server && npm install && npm start",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "version": "git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": ["webrtc", "react", "vue", "angular", "svelte"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^4.9.5",
    "jest": "^29.5.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^16.11.12",
    "eslint": "^8.40.0",
    "@typescript-eslint/parser": "^5.59.5",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "webpack": "^5.76.0",
    "webpack-cli": "^4.9.2",
    "terser-webpack-plugin": "^5.3.6"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  }
}